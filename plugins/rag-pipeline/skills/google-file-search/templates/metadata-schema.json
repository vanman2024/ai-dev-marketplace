  "python_usage": {
    "adding_metadata": "custom_metadata=[{'key': 'author', 'string_value': 'John Doe'}, {'key': 'year', 'numeric_value': 2024}]",
    "filtering": "metadata_filter='author=John Doe AND year=2024'"
