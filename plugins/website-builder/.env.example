# ============================================
# AI Tech Stack 1 - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual keys
# DO NOT commit .env to Git - it's already in .gitignore

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: Supabase Database Password (for migrations)
SUPABASE_DB_PASSWORD=your-db-password

# --------------------------------------------
# Anthropic (Claude) API
# --------------------------------------------
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-...

# --------------------------------------------
# Google AI (Gemini, Imagen, Veo)
# --------------------------------------------
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy...

# For Imagen/Veo (if using separate project)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# --------------------------------------------
# Mem0 Configuration
# --------------------------------------------
# Get from: https://app.mem0.ai/dashboard/api-keys
MEM0_API_KEY=m0-...

# Optional: For Mem0 OSS (self-hosted)
MEM0_MODE=oss # or 'platform'
MEM0_SUPABASE_URL=${PUBLIC_SUPABASE_URL}
MEM0_SUPABASE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# --------------------------------------------
# Vercel AI SDK (Optional)
# --------------------------------------------
# Only needed if using Vercel AI SDK features
OPENAI_API_KEY=sk-...
GROQ_API_KEY=gsk_...

# --------------------------------------------
# Content Generation MCP Server
# --------------------------------------------
# Uses Google API keys above, but you can override:
CONTENT_GENERATION_MODEL=gemini-2.0-flash-exp
IMAGE_GENERATION_MODEL=imagen-4
VIDEO_GENERATION_MODEL=veo-3

# Default quality settings
DEFAULT_IMAGE_QUALITY=hd # or 'sd'
DEFAULT_ASPECT_RATIO=16:9

# Cost tracking (optional)
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.00

# --------------------------------------------
# Astro Configuration
# --------------------------------------------
# Site URL (for sitemap, RSS, etc.)
PUBLIC_SITE_URL=https://yourdomain.com

# Build settings
NODE_ENV=development # or 'production'

# --------------------------------------------
# Analytics & Monitoring (Optional)
# --------------------------------------------
# Google Analytics
PUBLIC_GA_TRACKING_ID=G-...

# Vercel Analytics
VERCEL_ANALYTICS_ID=...

# Sentry (error tracking)
SENTRY_DSN=...

# --------------------------------------------
# Feature Flags (Optional)
# --------------------------------------------
ENABLE_AI_GENERATION=true
ENABLE_REALTIME=true
ENABLE_SEARCH=true
ENABLE_COMMENTS=false

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Enable debug logging
DEBUG=false
LOG_LEVEL=info # error, warn, info, debug

# Hot reload settings
ASTRO_TELEMETRY_DISABLED=1
