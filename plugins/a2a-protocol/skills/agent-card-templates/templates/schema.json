{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A2A Agent Card Schema",
  "description": "JSON Schema for Agent-to-Agent (A2A) Protocol Agent Card specification v0.3",
  "type": "object",
  "required": [
    "id",
    "name",
    "protocolVersion",
    "serviceEndpoint",
    "provider",
    "capabilities",
    "securitySchemes",
    "security"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the agent (URI or UUID)",
      "examples": [
        "urn:example:agent:calculator",
        "uuid:123e4567-e89b-12d3-a456-426614174000"
      ]
    },
    "name": {
      "type": "string",
      "description": "Human-readable display name for the agent",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Detailed explanation of the agent's purpose and functionality"
    },
    "logo": {
      "type": "string",
      "format": "uri",
      "description": "URL to a logo image for visual identification"
    },
    "version": {
      "type": "string",
      "description": "Version identifier for the agent implementation",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "protocolVersion": {
      "type": "string",
      "description": "Latest supported A2A protocol version",
      "enum": ["0.3", "0.2", "0.1"],
      "default": "0.3"
    },
    "serviceEndpoint": {
      "type": "string",
      "format": "uri",
      "description": "The base URL where the agent's A2A service is accessible"
    },
    "provider": {
      "type": "object",
      "description": "Information about the organization or entity providing the agent",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization name"
        },
        "contactEmail": {
          "type": "string",
          "format": "email",
          "description": "Support contact email"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Provider website"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "description": "Boolean flags indicating optional features supported by the agent",
      "properties": {
        "streaming": {
          "type": "boolean",
          "description": "Support for real-time streaming updates (SSE)",
          "default": false
        },
        "pushNotifications": {
          "type": "boolean",
          "description": "Support for WebHook push notifications",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "securitySchemes": {
      "type": "object",
      "description": "Dictionary mapping scheme names to SecurityScheme objects",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "oneOf": [
            {
              "type": "object",
              "description": "API Key authentication scheme",
              "required": ["type", "name", "in"],
              "properties": {
                "type": { "const": "apiKey" },
                "name": {
                  "type": "string",
                  "description": "Name of the header or query parameter"
                },
                "in": {
                  "type": "string",
                  "enum": ["header", "query"],
                  "description": "Location of the API key"
                }
              }
            },
            {
              "type": "object",
              "description": "HTTP authentication scheme",
              "required": ["type", "scheme"],
              "properties": {
                "type": { "const": "http" },
                "scheme": {
                  "type": "string",
                  "enum": ["basic", "bearer"],
                  "description": "HTTP authentication scheme"
                }
              }
            },
            {
              "type": "object",
              "description": "OAuth 2.0 authentication scheme",
              "required": ["type", "flows"],
              "properties": {
                "type": { "const": "oauth2" },
                "flows": {
                  "type": "object",
                  "properties": {
                    "authorizationCode": {
                      "type": "object",
                      "required": ["authorizationUrl", "tokenUrl"],
                      "properties": {
                        "authorizationUrl": { "type": "string", "format": "uri" },
                        "tokenUrl": { "type": "string", "format": "uri" },
                        "refreshUrl": { "type": "string", "format": "uri" },
                        "scopes": {
                          "type": "object",
                          "additionalProperties": { "type": "string" }
                        }
                      }
                    },
                    "clientCredentials": {
                      "type": "object",
                      "required": ["tokenUrl"],
                      "properties": {
                        "tokenUrl": { "type": "string", "format": "uri" },
                        "scopes": {
                          "type": "object",
                          "additionalProperties": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "description": "OpenID Connect authentication scheme",
              "required": ["type", "openIdConnectUrl"],
              "properties": {
                "type": { "const": "openIdConnect" },
                "openIdConnectUrl": {
                  "type": "string",
                  "format": "uri",
                  "description": "OpenID Connect discovery URL"
                }
              }
            }
          ]
        }
      }
    },
    "security": {
      "type": "array",
      "description": "List of security scheme combinations required to access the agent",
      "items": {
        "type": "object",
        "description": "Security requirement object mapping scheme names to scopes",
        "additionalProperties": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "Enumeration of specific capabilities the agent can perform",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique skill identifier"
          },
          "description": {
            "type": "string",
            "description": "Explanation of what the skill does"
          },
          "inputSchema": {
            "type": "object",
            "description": "JSON Schema defining expected input structure"
          },
          "outputSchema": {
            "type": "object",
            "description": "JSON Schema defining expected output structure"
          },
          "inputModes": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Supported input MIME types",
            "default": ["text/plain"]
          },
          "outputModes": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Supported output MIME types",
            "default": ["text/plain"]
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Categorization tags for discovery"
          },
          "examples": {
            "type": "array",
            "description": "Example input/output pairs",
            "items": {
              "type": "object",
              "properties": {
                "input": { "type": "object" },
                "output": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "extensions": {
      "type": "array",
      "description": "Declared extension support with versioning",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" }
        }
      }
    },
    "supportsExtendedAgentCard": {
      "type": "boolean",
      "description": "Indicates availability of authenticated extended card endpoint",
      "default": false
    },
    "metadata": {
      "type": "object",
      "description": "Custom key-value pairs for additional agent information",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
