# Clerk Configuration
# Get from: https://dashboard.clerk.com/last-active?path=api-keys

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk Webhook Secret
# Get from: https://dashboard.clerk.com/last-active?path=webhooks
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your_project_ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (server-side only, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Clerk Instance URLs (auto-detected from publishable key)
CLERK_FRONTEND_API=https://your-domain.clerk.accounts.dev
CLERK_JWKS_URL=https://your-domain.clerk.accounts.dev/.well-known/jwks.json

# Optional: Clerk Sign-In/Sign-Up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Optional: Supabase Project Reference (for CLI)
SUPABASE_PROJECT_REF=your_project_ref

# Optional: Enable debug logging
DEBUG_CLERK_SUPABASE_SYNC=false
